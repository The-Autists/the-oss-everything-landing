---
interface Props {
  data: {
    title: string;
    summary: string;
    description: string;
    img: string;
  };
  flip: boolean;
}
const {
  data: { title, summary, description, img },
  flip,
} = Astro.props;
---

<div class={`section ${flip ? "section-reverse" : ""}`}>
  <img src={img} alt="" />
  <div class="content">
    <div class="context">
      <h3>{title}</h3>
      <p>{description}</p>
    </div>
    <a href="" class="btn">Add to Discord</a>
  </div>
</div>

<style>
  .section {
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: center;
    gap: 64px;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    gap: 64px;
  }

  .context {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    gap: 16px;
    width: 100%;
    max-width: 500px;
    text-wrap: pretty;
  }

  img {
    width: 100%;
    max-width: 500px;
    aspect-ratio: 16/9;
    border-radius: 8px;
    object-fit: cover;
  }

  h3 {
    font-size: 24px;
  }

  p {
    color: var(--text-subheading);
  }

  @media (min-width: 768px) {
    .section {
      flex-direction: row;
    }

    .section-reverse {
      flex-direction: row-reverse;
    }
  }
</style>
