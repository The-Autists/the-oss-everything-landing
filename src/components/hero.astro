---
import { Image } from "astro:assets";
---

<section>
  <div class="hero">
    <div class="context">
      <div class="chip">
        <p>New Discord server manging experience</p>
      </div>
      <div>
        <h1>Manage your server</h1>
        <h1 style="color: var(--text-subheading);">Like a Pro!</h1>
      </div>
      <h4>
        An all purpose customizable bot for moderation, Welcoming, Logs And
        more!
      </h4>
      <div class="btn-group">
        <a class="btn">Add To Discord</a>
        <a class="btn btn-secondary">Browse Features</a>
      </div>
    </div>
    <img
      class="logo"
      loading="eager"
      src="/awfixer.png"
      alt="logo"
    />
  </div>
  <div class="wave"></div>
</section>

<style>
  section {
    position: relative;
    height: 100vh;
  }

  .hero {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 128px;
    height: calc(100vh - 100px);
    background-image: url("/hero.png");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .logo {
    max-width: 228px;
    max-height: 228px;
    height: 20vh;
  }

  .wave {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100px;
    background: linear-gradient(180deg, #000 0%, var(--background) 100%);
    z-index: -1;
  }

  .context {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 32px;
    height: 100vh;
  }

  @media (width < 1024px) {
    .hero {
      gap: 64px;
      padding: 0 32px;
    }
  }

  @media (width < 768px) {
    .hero {
      flex-direction: column-reverse;
      justify-content: center;
      gap: 128px;
      height: calc(100vh - 100px);
    }

    .context {
      align-items: center;
      text-align: center;
      height: fit-content;
    }

    h4 {
      max-width: 100%;
    }
  }

  h4 {
    max-width: 380px;
  }

  .btn-group {
    display: flex;
    flex-direction: row;
    gap: 32px;
  }
</style>
